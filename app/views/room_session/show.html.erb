            <div class="wave-bar"></div>
            <div class="wave-bar"></div>
            <div class="wave-bar"></div>
            <div class="wave-bar"></div>
          </div>
          <button onclick="play()" id="play-button" class="btn-floating btn-large waves-effect waves-light">
            <i class="material-icons icon-play">play_arrow</i>
            <i class="material-icons">stop</i>
          </button>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col s9">
        <h5>Conversa</h5>
        <ul id="messages-list" class="collection scrollable">
