<section class="room_session">
  <div class="container">
    <div class="row">
      <div class="col s12">
        <div class="left">
          <h1 class="teal-text"><%= @room.name %></h1>
        </div>
        <div class="right">
          <span class="timer hide grey-text">00:00:00</span>
          <div class="wave-container hide">
            <div class="wave-bar"></div>
            <div class="wave-bar"></div>
            <div class="wave-bar"></div>
            <div class="wave-bar"></div>
            <div class="wave-bar"></div>
