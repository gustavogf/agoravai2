        </ul>
      </div>

      <div class="col s3">
        <h5>Usu√°rios</h5>
        <ul class="collection scrollable">
          <% @users.each do |user| %>
            <li class="collection-item">
              <%= user.name %>
            </li>
          <% end %>
        </ul>
        <div id='graph'></div>
      </div>
    </div>

    <div id="modal" class="modal">
      <%= form_tag set_user_path, class: 'form', method: 'post', id: 'user-name-form',  remote: true do %>
        <div class="modal-content">
          <h4>Insira seu nome</h4>
          <div class="input-field">
            <input id="username" name="username" type="text" class="validate">
            <label for="username">Nome</label>
          </div>
          <%= hidden_field_tag "room_session_id", @room.id %>
        </div>
        <div class="modal-footer">
          <button type="button" onclick="submitUserForm()" id="btn-submit-user" class="waves-effect waves-green btn-flat">Enviar</button>
        </div>
      <% end %>
    </div>

  </div>
</section>
